/* pages/my/wallet.wxss */
.top_or{
  width: 715rpx;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  position: relative;
}
.top_or .image{
  width: 715rpx;
  height: 300rpx;
  background-size: 100%;
}
.top_or .content{
  width: 715rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 50rpx 40rpx 0 50rpx;
}
.top_or .content .one{
  line-height: 60rpx;
  font-size: 48rpx;
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
  margin-bottom: 50rpx;
  color: #fff;
}
.top_or .content .one .left{
  font-size: 28rpx;
  width: 280rpx;
}
.top_or .content .one .right{
  width: 50rpx;
  height: 40rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: #FE0000;
  border-radius:14rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
}
.top_or .content .two{
  font-size: 24rpx;
  line-height: 40rpx;
  position: relative;
  padding-right: 100rpx;
}
.top_or .content .two .t1{
  display: block;
}
.top_or .content .two .t2{
  display: block;
  color: #999;
  font-size: 24rpx;
}
.top_or .content .two .right{
  width: 26rpx;
  height: 26rpx;
  background-size: 100%;
  background-color: transparent;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}
.cou_top{
  font-size: 28rpx;
  color: #333;
  width: 750rpx;
  height: 90rpx;
  background-color: #fff;
  margin-bottom: 17rpx;
}
.cou_top .top{
  width: 25%;
  text-align: center;
  position: relative;
  float: left;
  height: 90rpx;
}
.cou_top .top .t1{
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.cou_top .top.active .t1{
  background-color: #FE0000;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius:14rpx;
  color: #fff;
  width: 100rpx;
}
.ul{
  width: 100%;
  box-sizing: border-box;
  margin-top: 19rpx;
  padding: 0 30rpx;
}
.ul .li{
  width: 100%;
  min-height: 112rpx;
  position: relative;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow:0px 0px 10rpx 0px rgba(20,7,0,0.06);
  padding-bottom: 14rpx;
}
.ul .li .time{
  font-size: 24rpx;
  line-height: 64rpx;
}
.ul .li .price{
  line-height: 46rpx;
  font-size: 30rpx;
}
.ul .li .status{
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}
.none{
  font-size: 24rpx;
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}