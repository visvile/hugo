<!--pages/my/index.wxml-->
<view class="my_top">
	<image src="{{image_icon}}my_top.png" class="img"></image>
	<view class="content">
		<view class="header">
			<image src="{{image_icon}}head.jpg" class="h_img"></image>
			<!-- 是否认证 -->
			<view class="aut">已认证</view>
		</view>
		<view class="title">烧烤海鲜</view>
		<view class="three_group">
			<view class="group" bindtap="gowowallet">
				<view class="t1">￥0.00</view>
				<view class="t2">账户余额</view>
			</view>
			<view class="group gotocoupon"  bindtap="gotocoupon">
				<view class="t1">3</view>
				<view class="t2">优惠券</view>
			</view>
			<view class="group" bindtap="gotonews">
				<view class="t1">378</view>
				<view class="t2">消息</view>
			</view>
		</view>
	</view>
</view>
<view class="my_order order_after">
	<view class="bt_all">
			<view class="bt">我的订单</view>
	</view>

	<view class="order_group" bindtap="gotoother">
		<view class="group">
			<view class="t1"><image class="icon_order" src="/images/fukuan.png"></image></view>
			<view class="t2">待付款</view>
			<view class="right_red" >2</view>
		</view>
		<view class="group">
			<view class="t1"><image class="icon_order" src="/images/fahuo.png"></image></view>
			<view class="t2">待发货</view>
		</view>
		<view class="group">
			<view class="t1"><image class="icon_order" src="/images/shouhuo.png"></image></view>
			<view class="t2">待收货</view>
		</view>
		<view class="group">
			<view class="t1"><image class="icon_order" src="/images/tuikuan.png"></image></view>
			<view class="t2">退款/售后</view>
		</view>
	</view>
</view>
<image class="my_vip" src="{{image_icon}}vip.png"></image>
<view class="order_num">
  <view class="two">
    <view class="t1">分拣完成待自取</view>
    <view class="t2">订单编号:2020090813425601</view>
  </view>
  <image src="{{image_icon}}kele.jpg" class="img"></image>
  <text class="text">再来一单</text>
</view>
<view class="my_order comm">
	<view class="bt">常用应用</view>
	<view class="comm_group">
    <view class="group" bindtap="gotoset">
      <image class="icon" src="{{image_icon}}my_icon8.png"></image>
      <view class="icon_t">设置</view>
    </view>
    <view class="group" bindtap="gotospellgroup">
      <image class="icon" src="{{image_icon}}my_icon2.png"></image>
      <view class="icon_t">拼团</view>
    </view>
    <view class="group" bindtap="gotorecords">
      <image class="icon" src="{{image_icon}}my_icon3.png"></image>
      <view class="icon_t">浏览记录</view>
    </view>
    <view class="group" bindtap="gotopurchase">
      <image class="icon" src="{{image_icon}}my_icon4.png"></image>
      <view class="icon_t">常购商品</view>
    </view>
  </view>
</view>