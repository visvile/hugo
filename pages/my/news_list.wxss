/* pages/my/news_list.wxss */
.read{
  width: 100%;
  box-sizing: border-box;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #FE0000;
  position: relative;
  text-indent: 72rpx;
}
.read .tick{
  width: 32rpx;
  height: 32rpx;
  background-size: 100%;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}
.news_ul{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.news_ul .li{
  width: 710rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius:10rpx;
  margin-bottom: 20rpx;
  position: relative;
  padding-top: 27rpx;
  box-sizing: border-box;
}
.news_ul .li .img{
  width: 65rpx;
  height: 65rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
}
.news_ul .li .img image{
  width: 100%;
  height: 100%;
  background-size: 100%;
  border-radius: 50%;
}
.news_ul .li .img .right_red{
  height: 24rpx;
  padding: 0 9rpx;
  font-size: 20rpx;
  color: #fff;
  line-height: 24rpx;
  background-color: #FE0000;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  border-radius: 24rpx;
}
.news_ul .li .txt{
  font-size: 24rpx;
  line-height: 34rpx;
  margin-left: 136rpx;
  display: block;
  padding-right: 20rpx;
}
.news_ul .li .one{
  margin-bottom: 12rpx;
  height: 28rpx;
}
.news_ul .li .one .bt{
  font-size: 28rpx;
  float: left;
}
.news_ul .li .one .time{
  float: right;
  color:  #A0A0A0;
}
.news_ul .li .two{
  font-family: Arial, Helvetica, sans-serif;
  white-space:nowrap;overflow:hidden;text-overflow:ellipsis; 
}