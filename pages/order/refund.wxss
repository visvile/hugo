.radio_group{
  padding-left: 20rpx;
}
/* 未选中的 背景样式 */
.radio_group radio .wx-radio-input{ 
  height: 30rpx; 
  width: 30rpx;
  border-radius: 50%;
  background: transparent;
  box-sizing: border-box;
  border: 2rpx solid #999;
}
/* 选中后的 背景样式 */
.radio_group radio .wx-radio-input.wx-radio-input-checked{
  border: 2rpx solid #FE0000;
  background-color: transparent;
}
/* 选中后的 对勾样式 */
.radio_group radio .wx-radio-input.wx-radio-input-checked::before{
 border-radius: 50%;
 width: 20rpx; 
 height: 20rpx;
 line-height: 20rpx;
 text-align: center;
 font-size:20rpx; 
 color:transparent;
 background: #FE0000;
}
