/* pages/invoice/fillInvoicePaper.wxss */
page{
  background-color: #f7f7f7;
}
.fillInvoicePaperTop{
  width: 710rpx;
  float: left;
  padding: 0 20rpx;
  margin-left: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.fillInvoicePaperTopLi{
  width: 100%;
  float: left;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  margin-top: 20rpx;
}
.fillInvoicePaperTopLiT1{
  width: 20%;
  float: left;
  font-size: 24rpx;
  color: #333;
}
.fillInvoicePaperTopLiT2{
  float: left;
  width: 76%;
  font-size: 24rpx;
  color: #333;
  margin-left: 2%;
  line-height: 40rpx;
}
.fillInvoicePaperTopLiT2 text{
  color: #c0c0c0;
  float: right;
}
.fillInvoicePaperTopLiGo{
  float: left;
  width: 76%;
  margin-left: 2%;
}
.fillInvoicePaperTopLiT3{
  float: left;
  width: calc(100% - 20rpx);
  float: left;
  font-size: 26rpx;
  color: #333;
}
.fillInvoicePaperTopLiT3 text{
  color: #c0c0c0;
  float: left;
  width: 100%;
}
.fillInvoicePaperTopLImg{
  width: 16rpx;
  float: right;
  margin-top: 24rpx;
}
.tab{float: left;padding: 6rpx 30rpx;background: #fff;color: #FE0000;border-radius: 20px;border: 1px solid #FE0000;font-size: 26rpx;}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{background: #FE0000;color: #fff;}
.swiper{width: 100%;}
.swiper_con{text-align: center; width: 100%; }

.fillInvoicePaperTopLiT4{
  float: left;
  width: 76%;
  margin-left: 2%;
}
.fillInvoicePaperBottomtext{
  width: 100%;
  font-size: 24rpx;
  float: left;
  color: #333;
  line-height: 50rpx;
  white-space:pre-line;
  padding: 20rpx 0;
}

.fillInvoicePaperBtn{
  height: 108rpx;
  width: 750rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;

}
.fillInvoicePaperBtn button:not([size='mini'])
{
  width: 130rpx;
  height: 50rpx;
}
button::after{
  border:none;
  }
.fillInvoicePaperBtn button{
  color: #fff;
  background-color: #FE0000;
  width: 130rpx;
  height: 50rpx;
  border-radius: 30rpx;
  line-height: 50rpx;
  position: absolute;
  font-size: 28rpx;
  bottom: 30rpx;
  right: 20rpx;
  padding: 0;
}
.red_xing{
  position: relative!important;
  line-height: 40rpx;
}
.red_xing::after{
  content: "*";
  font-size: 24rpx;
  color: #f04;
  position: absolute;
  top: -5rpx;
  left: -15rpx;
}
.bz_bt{
  width: 100%;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #c0c0c0;
  background-color: #fff;
  text-indent: 5%;
}
.textarea{
  width: 100%;
  height: 200rpx;
  float: left;
  background-color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 5%;
}